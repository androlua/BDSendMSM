        </FrameLayout>

        <View
            android:layout_width="7dp"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/image_single06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/satellite_single" />

            <TextView
                android:id="@+id/text_single06_semaphore"
                android:layout_width="wrap_content"
